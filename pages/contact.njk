<main id="contact-page">
    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.com/svgjs" width="100%" height="100" preserveAspectRatio="xMidYMid slice" viewBox="0 0 1905 100">
        <g mask="url(&quot;#SvgjsMask1041&quot;)" fill="none">
            <path transform="scale(1, -1) translate(0, -100)" d="M 0,76 C 126.8,67 380.4,31.4 634,31 C 887.6,30.6 1014.8,78 1268,74 C 1521.2,70 1773.6,23.6 1905,11L1905 100L0 100z" fill="rgba(13, 110, 253, 1)"></path>
        </g>
        <defs>
            <mask id="SvgjsMask1041">
                <rect width="100%" height="100" fill="#ffffff"></rect>
            </mask>
        </defs>
    </svg>
    <h1 style="text-align: center; margin: 1.5em 0 1.5em 0;">Contact Ken</h1>
    <section class="abstract-section generic-section">
        <form name="contact" action="/thank-you" method="POST" netlify-honeypot="not-this-one" data-netlify="true">
            <div class="form-group form-spacing">
                <label for="email">Email Address <span style="color: red;">*</span></label>
                <input id="email" name="Client-Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter Email Address" required>
            </div>
            <div class="form-group form-spacing">
                <label for="client-name">Your Name <span style="color: red;">*</span></label>
                <input id="client-name" name="Client-Name" type="text" class="form-control" placeholder="Enter Your Name" required>
            </div>
            <div class="form-group form-spacing">
                <label for="client-site">Your Website</label>
                <input id="client-site" name="Client-Website" type="text" class="form-control" placeholder="What's your website URL (example: kenwrites.ca)">
            </div>
            <div class="form-group form-spacing">
                <label for="help-type">What do you need help with?</label>
                <select class="form-control" name="Help-Type" id="help-type">
                    <option value="web-dev">Web Development</option>
                    <option value="web-consult">Web Consultation</option>
                    <option value="copy">Copywriting</option>
                    <option value="content">Content Writing</option>
                    <option value="audit">Auditing</option>
                </select>
            </div>
            <div class="form-group form-spacing" style="display: flex; flex-direction: column;">
                <label>Are you looking for a website/writing audit today?</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Audit" id="audit-yes" value="yes">
                    <label class="form-check-label" for="audit-yes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Audit" id="audit-no" value="no">
                    <label class="form-check-label" for="audit-no">No</label>
                </div>
            </div>

            <div class="form-group form-spacing">
                <label for="message">Please briefly describe your project:</label>
                <textarea class="form-control" name="Description" id="message" rows="5" placeholder="Describe your project (250 word maximum)" max-length="250"></textarea>
            </div>
            <div class="form-group form-spacing">
                <button id="contact-submit" class="btn bg-site-primary btn-lg" type="submit">Submit</button>
            </div>
            <input type="text" class="not-this-one" name="not-this-one">
        </form>
    </section>
</main>
